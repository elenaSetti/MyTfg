<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"
        app:srcCompat="@drawable/logi" />
    <ImageView
        android:id="@+id/user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/logo"
        app:srcCompat="@drawable/usuarios" />
    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@id/logo"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/user"
        android:backgroundTint="@color/black"
        android:ems="12"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20dp" />
    <ImageView
        android:id="@+id/tele"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/txtUsuario"
        app:srcCompat="@drawable/pho" />
    <EditText
        android:id="@+id/txtPhone"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@id/txtUsuario"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/user"
        android:backgroundTint="@color/black"
        android:ems="12"
        android:hint="Telefono"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20dp" />
    <ImageView
        android:id="@+id/email"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/txtPhone"
        app:srcCompat="@drawable/mail" />
    <EditText
        android:id="@+id/txtREmail"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@id/txtPhone"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:ems="12"
        android:hint="Email"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        tools:ignore="SpeakableTextPresentCheck" />
    <ImageView
        android:id="@+id/Password"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/txtREmail"
        app:srcCompat="@drawable/candado" />
    <EditText
        android:id="@+id/txtRContrasena"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txtREmail"
        android:backgroundTint="@color/black"
        android:ems="12"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        android:autofillHints="" />
    <ImageView
        android:id="@+id/Passwordconf"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/txtRContrasena"
        app:srcCompat="@drawable/candado" />
    <EditText
        android:id="@+id/txtconfContrasena"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/txtRContrasena"
        android:backgroundTint="@color/black"
        android:ems="12"
        android:hint="Repetir Contraseña"
        android:inputType="textPassword"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        android:autofillHints="" />
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtconfContrasena"
        android:text="Aceptar términos y condiciones"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="18dp"/>
    <Button
        android:id="@+id/btnregistroR"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/checkBox"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/botonregistrar"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="Sign up" />
</RelativeLayout>