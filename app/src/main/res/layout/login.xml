<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/fondo2"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="2000dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/logi" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/pho" />

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:ems="12"
        android:hint="Teléfono"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/Password"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_below="@id/txtTelefono"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/candado" />

    <EditText
        android:id="@+id/txtContrasena"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@id/txtTelefono"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:ems="12"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/olvido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtContrasena"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:text="¿Has olvidado la contraseña?"
        android:textSize="15dp"
        android:textColor="@color/purple_500" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/olvido"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/botonentrar"
        android:text="Sign in"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnregistro"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnEntrar"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/botonregistrar"
        android:text="Sign up"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnregistro"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="30dp"
        android:text="Continue with"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/btnGoogle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/textView"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/google" />


</RelativeLayout>